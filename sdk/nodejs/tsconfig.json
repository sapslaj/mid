    "index.ts",
    "provider.ts",
    "resource/apt.ts",
    "resource/exec.ts",
    "resource/file.ts",
    "resource/fileLine.ts",
    "resource/group.ts",
    "resource/index.ts",
    "resource/package.ts",
    "resource/service.ts",
    "resource/systemdService.ts",
    "resource/user.ts",
    "types/index.ts",
    "types/input.ts",
    "types/output.ts",
    "utilities.ts"
  ]
}
